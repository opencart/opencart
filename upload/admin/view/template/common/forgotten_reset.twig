{{ header }}
<div id="content">
	<div class="container">
		<br/>
		<br/>
		<div class="row">
			<div class="offset-sm-1 col-sm-10 offset-md-2 col-md-8 offset-lg-3 col-lg-6">
				<div class="card">
					<div class="card-header"><i class="fas fa-redo"></i> {{ heading_title }}</div>
					<div id="" class="card-body">
						<p>{{ text_password }}</p>
						<div class="mb-3">
							<label for="input-password" class="col-form-label">{{ entry_password }}</label> <input type="password" name="password" value="" id="input-password" class="form-control"/>
						</div>
						<div class="mb-3">
							<label for="input-confirm" class="col-form-label">{{ entry_confirm }}</label> <input type="password" name="confirm" value="" id="input-confirm" class="form-control"/>
						</div>
						<div class="text-end">
							<button type="button" id="button-reset" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_save }}</button>
							<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fas fa-reply"></i></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript"><!--
$('#button-reset').on('click', function() {
    var element = this;

    $.ajax({
        url: 'index.php?route=common/reset|reset',
        type: 'post',
        data: $('#login :input'),
        dataType: 'json',
        beforeSend: function() {
            $(element).button('loading');
        },
        complete: function() {
            $(element).button('reset');
        },
        success: function(json) {
            $('.alert-dismissible').remove();

            if (json['error']) {
                $('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
            }

            if (json['redirect']) {
                location = json['redirect'];
            }
        },
        error: function(xhr, ajaxOptions, thrownError) {
            alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
    });
});
//--></script>
