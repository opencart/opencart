{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-right">
				<a href="{{ invoice }}" target="_blank" data-bs-toggle="tooltip" title="{{ button_invoice_print }}" class="btn btn-info"><i class="fas fa-print"></i></a> <a href="{{ shipping }}" target="_blank" data-bs-toggle="tooltip" title="{{ button_shipping_print }}" class="btn btn-info"><i class="fas fa-truck"></i></a> <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fas fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="card mb-3">
			<div class="card-header"><i class="fas fa-info-circle"></i> {{ text_form }}</div>
			<div class="card-body">

				<div id="collapse-order" class="overflow-hidden" style="max-height: 78px;">
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4">

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_invoice }}</strong>
										<br/>
										{{ invoice_no }}&nbsp;
									</p>
								</div>
								<div class="input-group-append">
									{% if not invoice_no %}
										<button type="button" id="button-invoice" data-loading-text="{{ text_loading }}" data-bs-toggle="tooltip" title="{{ button_generate }}" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
									{% else %}
										<button type="button" disabled="disabled" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
									{% endif %}
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_store }}</strong>
										<br/>
										<a href="{{ store_url }}" target="_blank">{{ store_name }}</a></p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-store" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="form-control-plaintext p-0 border rounded mb-3">
								<p class="lead p-2 mb-0"><strong>{{ text_date_added }}</strong>
									<br/>
									{{ date_added }}
								</p>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_customer }}</strong>
										<br/>
										{% if customer %}
											<a href="{{ customer }}" target="_blank">{{ firstname }} {{ lastname }}</a>
										{% else %}
											{{ firstname }} {{ lastname }}
										{% endif %}
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-customer" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_customer_group }}</strong>
										<br/>
										{{ customer_group }}</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-customer" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 m-0"><strong>{{ text_email }}</strong>
										<br/>
										<a href="mailto:{{ email }}">{{ email }}</a></p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-customer" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_telephone }}</strong>
										<br/>
										{{ telephone }}
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-customer" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>
						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_language }}</strong>
										<br/>
										{{ language }}
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-language" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_currency }}</strong>
										<br/>
										{{ currency }}
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-currency" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="form-control-plaintext p-0 border rounded mb-3">
								<p class="lead p-2 mb-0"><strong>{{ text_total }}</strong>
									<br/>
									{{ total }}
								</p>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_payment_method }}</strong>
										<br/>
										{{ payment_method }}
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-payment-method" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						{% if shipping_method %}
							<div class="col">
								<div class="input-group mb-3">
									<div class="form-control-plaintext p-0 border rounded-left">
										<p class="lead p-2 mb-0"><strong>{{ text_shipping_method }}</strong>
											<br/>
											{{ shipping_method }}
										</p>
									</div>
									<div class="input-group-append">
										<button type="button" data-toggle="modal" data-target="#modal-shipping-method" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
									</div>
								</div>
							</div>
						{% endif %}

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_coupon }}</strong>
										<br/>
										{{ coupon }}&nbsp;
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-coupon" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_voucher }}</strong>
										<br/>
										{{ voucher }}&nbsp;
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-voucher" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_reward }}</strong>
										<br/>
										{{ reward }}</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-reward" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
								<div class="input-group-append">
									{% if customer and reward %}
										{% if not reward_total %}
											<button type="button" id="button-reward-add" data-loading-text="{{ text_loading }}" data-bs-toggle="tooltip" title="{{ button_reward_add }}" class="btn btn-success"><i class="fas fa-plus-circle"></i></button>
										{% else %}
											<button type="button" id="button-reward-remove" data-loading-text="{{ text_loading }}" data-bs-toggle="tooltip" title="{{ button_reward_remove }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button>
										{% endif %}
									{% else %}
										<button type="button" disabled="disabled" class="btn btn-success"><i class="fas fa-plus-circle"></i></button>
									{% endif %}
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_affiliate }}</strong>
										<br/>
										{% if affiliate %}
											<a href="{{ affiliate }}">{{ affiliate_firstname }} {{ affiliate_lastname }}</a>
										{% else %}
											&nbsp;
										{% endif %}
									</p>
								</div>
								<div class="input-group-append">
									<button type="button" data-toggle="modal" data-target="#modal-affiliate" class="btn btn-outline-primary"><i class="fas fa-cog"></i></button>
								</div>
							</div>
						</div>

						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_commission }}</strong>
										<br/>
										{{ commission }}
									</p>
								</div>
								<div class="input-group-append">
									{% if not commission_total %}
										<button type="button" id="button-commission-add" data-loading-text="{{ text_loading }}" data-bs-toggle="tooltip" title="{{ button_commission_add }}" class="btn btn-success"><i class="fas fa-plus-circle"></i></button>
									{% else %}
										<button type="button" id="button-commission-remove" data-loading-text="{{ text_loading }}" data-bs-toggle="tooltip" title="{{ button_commission_remove }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button>
									{% endif %}
								</div>
							</div>
						</div>

					</div>
				</div>

				<button type="button" id="button-collapse" class="btn btn-light btn-lg btn-block mb-3">{{ text_more }} <i class="fas fa-angle-down"></i></button>

				<div class="row">
					<div class="col">
						<div class="input-group mb-3">
							<div class="form-control-plaintext p-0 border rounded-left">
								<p class="lead p-2 mb-0"><strong>{{ text_payment_address }}</strong>
									<br/>
									{{ payment_address }}
								</p>
							</div>
							<div class="input-group-append"><button type="button" data-toggle="modal" data-target="#modal-payment-address" class="btn btn-outline-primary btn-sm float-right"><i class="fas fa-cog"></i></button></div>
						</div>
					</div>

					{% if shipping_method %}
						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_shipping_address }}</strong>
										<br/>
										{{ shipping_address }}
									</p>
								</div>
								<div class="input-group-append"><button type="button" data-toggle="modal" data-target="#modal-shipping-address" class="btn btn-outline-primary btn-sm float-right"><i class="fas fa-cog"></i></button></div>
							</div>
						</div>
					{% endif %}

				</div>

				<table class="table table-bordered">
					<thead>
						<tr>
							<td class="text-left">{{ column_product }}</td>
							<td class="text-left">{{ column_model }}</td>
							<td class="text-right">{{ column_quantity }}</td>
							<td class="text-right">{{ column_price }}</td>
							<td class="text-right">{{ column_total }}</td>
							<td class="text-right" style="width: 1px;">{{ column_action }}</td>
						</tr>
					</thead>
					<tbody id="cart">
						{% if order_products or order_vouchers %}

							{% set product_row = 0 %}
							{% for order_product in order_products %}
								<tr>
									<td class="text-left"><a href="{{ order_product.href }}">{{ order_product.name }}</a>
										<br/>
										<input type="hidden" name="product[{{ product_row }}][product_id]" value="{{ order_product.product_id }}"/>
										{% for option in order_product.option %}
											{% if option.type != 'file' %}
												&nbsp;
												<small> - {{ option.name }}: {{ option.value }}</small>
											{% else %}
												&nbsp;
												<small> - {{ option.name }}: <a href="{{ option.href }}">{{ option.value }}</a></small>
											{% endif %}
											<br/>
											{% if option.type == 'select' or option.type == 'radio' or option.type == 'image' %}
												<input type="hidden" name="product[{{ product_row }}][option][{{ option.product_option_id }}]" value="{{ option.product_option_value_id }}" class="form-check-input"/>
											{% endif %}
											{% if option.type == 'checkbox' %}
												<input type="hidden" name="product[{{ product_row }}][option][{{ option.product_option_id }}][]" value="{{ option.product_option_value_id }}" class="form-check-input"/>
											{% endif %}
											{% if option.type == 'text' or option.type == 'textarea' or option.type == 'file' or option.type == 'date' or option.type == 'datetime' or option.type == 'time' %}
												<input type="hidden" name="product[{{ product_row }}][option][{{ option.product_option_id }}]" value="{{ option.value }}"/>
											{% endif %}
										{% endfor %}</td>
									<td class="text-left">{{ order_product.model }}</td>
									<td class="text-right">{{ order_product.quantity }}
										<input type="hidden" name="product[{{ product_row }}][quantity]" value="{{ order_product.quantity }}"/></td>
									<td class="text-right">{{ order_product.price }}</td>
									<td class="text-right">{{ order_product.total }}</td>
									<td class="text-right"><button type="button" data-bs-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button></td>
								</tr>
								{% set product_row = product_row + 1 %}
							{% endfor %}

							{% set voucher_row = 0 %}
							{% for order_voucher in order_vouchers %}
								<tr>
									<td class="text-left"><a href="{{ order_voucher.href }}">{{ order_voucher.description }}</a> <input type="hidden" name="voucher[{{ voucher_row }}][voucher_id]" value="{{ order_voucher.voucher_id }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][description]" value="{{ order_voucher.description }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][code]" value="{{ order_voucher.code }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][from_name]" value="{{ order_voucher.from_name }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][from_email]" value="{{ order_voucher.from_email }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][to_name]" value="{{ order_voucher.to_name }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][to_email]" value="{{ order_voucher.to_email }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][voucher_theme_id]" value="{{ order_voucher.voucher_theme_id }}"/>
										<input type="hidden" name="voucher[{{ voucher_row }}][message]" value="{{ order_voucher.message }}"/> <input type="hidden" name="voucher[{{ voucher_row }}][amount]" value="{{ order_voucher.amount }}"/></td>
									<td class="text-left"></td>
									<td class="text-right">1</td>
									<td class="text-right">{{ order_voucher.amount }}</td>
									<td class="text-right">{{ order_voucher.amount }}</td>
									<td class="text-right"><button type="button" data-bs-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button></td>
								</tr>
								{% set voucher_row = voucher_row + 1 %}
							{% endfor %}

						{% else %}

							<tr>
								<td class="text-center" colspan="6">{{ text_no_results }}</td>
							</tr>

						{% endif %}

						<tr>
							<td colspan="5"></td>
							<td class="text-right"><button type="button" data-toggle="modal" data-target="#modal-cart" class="btn btn-primary"><i class="fas fa-plus-circle"></i></button></td>
						</tr>

						{% for order_total in order_totals %}
							<tr>
								<td colspan="5" class="text-right">{{ order_total.title }}</td>
								<td class="text-right">{{ order_total.text }}</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
				{% if comment %}
					<div class="row">
						<div class="col">
							<div class="input-group mb-3">
								<div class="form-control-plaintext p-0 border rounded-left">
									<p class="lead p-2 mb-0"><strong>{{ text_comment }}</strong>
										<br/>
										{{ comment }}
									</p>
								</div>
								<div class="input-group-append"><button type="button" data-toggle="modal" data-target="#modal-comment" class="btn btn-outline-primary btn-sm float-right"><i class="fas fa-cog"></i></button></div>
							</div>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
		<div class="card mb-3">
			<div class="card-header"><i class="fas fa-comment"></i> {{ text_history }}</div>
			<div class="card-body">
				<ul class="nav nav-tabs">
					<li class="nav-item"><a href="#tab-history" data-bs-toggle="tab" class="nav-link active">{{ tab_history }}</a></li>
					<li class="nav-item"><a href="#tab-additional" data-bs-toggle="tab" class="nav-link">{{ tab_additional }}</a></li>
					{% for tab in tabs %}
						<li class="nav-item"><a href="#tab-{{ tab.code }}" data-bs-toggle="tab" class="nav-link">{{ tab.title }}</a></li>
					{% endfor %}
				</ul>
				<div class="tab-content">
					<div class="tab-pane active" id="tab-history">
						<div id="history"></div>
						<br/>
						<fieldset>
							<legend>{{ text_history_add }}</legend>
							<div class="form-group row">
								<label for="input-order-status" class="col-sm-2 col-form-label">{{ entry_order_status }}</label>
								<div class="col-sm-10">
									<select name="order_status_id" id="input-order-status" class="form-control">
										{% for order_statuses in order_statuses %}
											{% if order_statuses.order_status_id == order_status_id %}
												<option value="{{ order_statuses.order_status_id }}" selected="selected">{{ order_statuses.name }}</option>
											{% else %}
												<option value="{{ order_statuses.order_status_id }}">{{ order_statuses.name }}</option>
											{% endif %}
										{% endfor %}
									</select>
								</div>
							</div>
							<div class="form-group row">
								<label for="input-override" class="col-sm-2 col-form-label">{{ entry_override }}</label>
								<div class="col-sm-10">
									<div class="btn-group btn-group-toggle" data-toggle="buttons">
										<label class="btn btn-outline-secondary"><input type="radio" name="override" value="1"/> {{ text_yes }}</label> <label class="btn btn-outline-secondary active"><input type="radio" name="override" value="0" checked="checked"/> {{ text_no }}</label>
									</div>
									<small class="form-text text-muted">{{ help_override }}</small>
								</div>
							</div>
							<div class="form-group row">
								<label for="input-notify" class="col-sm-2 col-form-label">{{ entry_notify }}</label>
								<div class="col-sm-10">
									<div class="btn-group btn-group-toggle" data-toggle="buttons">
										<label class="btn btn-outline-secondary"><input type="radio" name="notify" value="1"/> {{ text_yes }}</label> <label class="btn btn-outline-secondary active"><input type="radio" name="notify" value="0" checked="checked"/> {{ text_no }}</label>
									</div>
								</div>
							</div>
							<div class="form-group row">
								<label for="input-comment" class="col-sm-2 col-form-label">{{ entry_comment }}</label>
								<div class="col-sm-10">
									<textarea name="comment" rows="8" placeholder="{{ entry_comment }}" id="input-comment" class="form-control"></textarea>
								</div>
							</div>
						</fieldset>
						<div class="text-right">
							<button id="button-history" data-loading-text="{{ text_loading }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i> {{ button_history_add }}</button>
						</div>
					</div>
					<div id="tab-additional" class="tab-pane">

						{% if account_custom_fields %}
							<div class="table-responsive">
								<table class="table table-bordered">
									<thead>
										<tr>
											<td colspan="2">{{ text_account_custom_field }}</td>
										</tr>
									</thead>
									<tbody>
										{% for custom_field in account_custom_fields %}
											<tr>
												<td>{{ custom_field.name }}</td>
												<td>{{ custom_field.value }}</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						{% endif %}

						{% if payment_custom_fields %}
							<div class="table-responsive">
								<table class="table table-bordered">
									<thead>
										<tr>
											<td colspan="2">{{ text_payment_custom_field }}</td>
										</tr>
									</thead>
									<tbody>
										{% for custom_field in payment_custom_fields %}
											<tr>
												<td>{{ custom_field.name }}</td>
												<td>{{ custom_field.value }}</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
