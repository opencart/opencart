  <input type="hidden" name="x_city" value="{{ x_city }}" />
  <input type="hidden" name="x_state" value="{{ x_state }}" />
  <input type="hidden" name="x_zip" value="{{ x_zip }}" />
  <input type="hidden" name="x_country" value="{{ x_country }}" />
