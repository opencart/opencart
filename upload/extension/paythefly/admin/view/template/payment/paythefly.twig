{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-payment" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <ul class="nav nav-tabs" id="paythefly-tabs">
            <li class="nav-item"><a href="#tab-general" class="nav-link active" data-bs-toggle="tab">{{ tab_general }}</a></li>
            <li class="nav-item"><a href="#tab-chain" class="nav-link" data-bs-toggle="tab">{{ tab_chain }}</a></li>
            <li class="nav-item"><a href="#tab-order-status" class="nav-link" data-bs-toggle="tab">{{ tab_order_status }}</a></li>
          </ul>
          <div class="tab-content">
            {# ── General Tab ── #}
            <div class="tab-pane active" id="tab-general">
              <div class="row mb-3 mt-3">
                <label for="input-project-id" class="col-sm-2 col-form-label">{{ entry_project_id }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_paythefly_project_id" value="{{ payment_paythefly_project_id }}" placeholder="{{ entry_project_id }}" id="input-project-id" class="form-control" required />
                  <div id="error-project-id" class="invalid-feedback"></div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-project-key" class="col-sm-2 col-form-label">{{ entry_project_key }}</label>
                <div class="col-sm-10">
                  <input type="password" name="payment_paythefly_project_key" value="{{ payment_paythefly_project_key }}" placeholder="{{ entry_project_key }}" id="input-project-key" class="form-control" required />
                  <div id="error-project-key" class="invalid-feedback"></div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-private-key" class="col-sm-2 col-form-label">{{ entry_private_key }}</label>
                <div class="col-sm-10">
                  <input type="password" name="payment_paythefly_private_key" value="{{ payment_paythefly_private_key }}" placeholder="{{ entry_private_key }}" id="input-private-key" class="form-control" required />
                  <div class="form-text">{{ text_private_key_help }}</div>
                  <div id="error-private-key" class="invalid-feedback"></div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-deadline-offset" class="col-sm-2 col-form-label">{{ entry_deadline_offset }}</label>
                <div class="col-sm-10">
                  <input type="number" name="payment_paythefly_deadline_offset" value="{{ payment_paythefly_deadline_offset }}" placeholder="3600" id="input-deadline-offset" class="form-control" min="60" />
                  <div class="form-text">{{ text_deadline_help }}</div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-geo-zone" class="col-sm-2 col-form-label">{{ entry_geo_zone }}</label>
                <div class="col-sm-10">
                  <select name="payment_paythefly_geo_zone_id" id="input-geo-zone" class="form-select">
                    <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %}
                      <option value="{{ geo_zone.geo_zone_id }}"{% if geo_zone.geo_zone_id == payment_paythefly_geo_zone_id %} selected{% endif %}>{{ geo_zone.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <x-switch name="payment_paythefly_status" value="1" checked="{{ payment_paythefly_status }}" input-id="input-status" input-class="form-switch form-switch-lg"></x-switch>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_paythefly_sort_order" value="{{ payment_paythefly_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">{{ entry_debug }}</label>
                <div class="col-sm-10">
                  <x-switch name="payment_paythefly_debug" value="1" checked="{{ payment_paythefly_debug }}" input-id="input-debug" input-class="form-switch form-switch-lg"></x-switch>
                  <div class="form-text">{{ text_debug_help }}</div>
                </div>
              </div>
            </div>

            {# ── Chain & Token Tab ── #}
            <div class="tab-pane" id="tab-chain">
              <div class="row mb-3 mt-3">
                <label for="input-chain" class="col-sm-2 col-form-label">{{ entry_chain }}</label>
                <div class="col-sm-10">
                  <select name="payment_paythefly_chain" id="input-chain" class="form-select">
                    <option value="bsc"{% if payment_paythefly_chain == 'bsc' %} selected{% endif %}>{{ text_bsc }}</option>
                    <option value="tron"{% if payment_paythefly_chain == 'tron' %} selected{% endif %}>{{ text_tron }}</option>
                  </select>
                  <div class="form-text">{{ text_chain_help }}</div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-contract-address" class="col-sm-2 col-form-label">{{ entry_contract_address }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_paythefly_contract_address" value="{{ payment_paythefly_contract_address }}" placeholder="0x..." id="input-contract-address" class="form-control" required />
                  <div id="error-contract-address" class="invalid-feedback"></div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-token-address" class="col-sm-2 col-form-label">{{ entry_token_address }}</label>
                <div class="col-sm-10">
                  <input type="text" name="payment_paythefly_token_address" value="{{ payment_paythefly_token_address }}" placeholder="0x0000000000000000000000000000000000000000" id="input-token-address" class="form-control" />
                  <div class="form-text">{{ text_token_help }}</div>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-token-decimals" class="col-sm-2 col-form-label">{{ entry_token_decimals }}</label>
                <div class="col-sm-10">
                  <input type="number" name="payment_paythefly_token_decimals" value="{{ payment_paythefly_token_decimals }}" placeholder="18" id="input-token-decimals" class="form-control" min="0" max="36" />
                </div>
              </div>
              <div class="alert alert-info">
                <strong>{{ text_native_bsc }}</strong><br/>
                <strong>{{ text_native_tron }}</strong>
              </div>
            </div>

            {# ── Order Status Tab ── #}
            <div class="tab-pane" id="tab-order-status">
              <div class="row mb-3 mt-3">
                <label for="input-pending-status" class="col-sm-2 col-form-label">{{ entry_pending_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_paythefly_pending_status_id" id="input-pending-status" class="form-select">
                    {% for order_status in order_statuses %}
                      <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_paythefly_pending_status_id %} selected{% endif %}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-confirmed-status" class="col-sm-2 col-form-label">{{ entry_confirmed_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_paythefly_confirmed_status_id" id="input-confirmed-status" class="form-select">
                    {% for order_status in order_statuses %}
                      <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_paythefly_confirmed_status_id %} selected{% endif %}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="row mb-3">
                <label for="input-failed-status" class="col-sm-2 col-form-label">{{ entry_failed_status }}</label>
                <div class="col-sm-10">
                  <select name="payment_paythefly_failed_status_id" id="input-failed-status" class="form-select">
                    {% for order_status in order_statuses %}
                      <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_paythefly_failed_status_id %} selected{% endif %}>{{ order_status.name }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
