{{ header }}
<div id="account-gdpr" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fas fa-check-triangle"></i> {{ success }}</div>
  {% endif %}
  <div class="row">
    <div id="content" class="col">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      <div class="text-danger border border-danger p-3 mb-3">
        <p><i class="fas fa-exclamation-triangle"></i> <strong>GDPR</strong> as dictated by EU Law.</p>

        <ul>
          <li>You will no longer have access to your %s account.</li>
          <li>No longer have access to your order history, wishlists, downloads</li>
          <li>Account deletion requests will process after 180 days so any fraud detection, chargebacks or refunds can be processed.</li>
        </ul>

      </div>
      <div class="d-inline-block pt-2 pd-2 w-100">
        <div class="float-left"><a href="{{ cancel }}" class="btn btn-light">{{ button_cancel }}</a></div>
        <div class="float-right"><a href="{{ delete }}" class="btn btn-danger"><i class="fas fa-exclamation-triangle"></i> {{ button_remove }}</a></div>
      </div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}