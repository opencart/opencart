        <input type="checkbox" name="newsletter" value="1" id="input-newsletter" class="form-check-input"/>
      </div>
      {% if text_agree %}
        <div id="register-agree" class="form-check form-switch form-switch-lg">
          <label class="form-check-label">{{ text_agree }}</label>
