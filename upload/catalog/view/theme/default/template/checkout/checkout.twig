{{ header }}
<div id="checkout-checkout" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
      {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
      {% set class = 'col-sm-9' %}
    {% else %}
      {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
      {{ content_top }}
      <h1>{{ heading_title }}</h1>
      <div id="accordion">
        <div class="card">
          <h4 id="heading-checkout-option" class="card-header collapsed" data-target="#collapse-checkout-option">{{ text_checkout_option }}</h4>
          <div id="collapse-checkout-option" class="collapse" data-parent="#accordion">
            <div class="card-body"></div>
          </div>
        </div>
        <div class="card">
          {% if not logged and account != 'guest' %}
            <h4 class="card-header collapsed" data-target="#collapse-payment-address">{{ text_checkout_account }}</h4>
            <div id="collapse-payment-address" class="collapse" data-parent="#accordion">
              <div class="card-body"></div>
            </div>
          {% else %}
            <h4 class="card-header collapsed" data-target="#collapse-payment-address">{{ text_checkout_account }}</h4>
            <div id="collapse-payment-address" class="collapse show" data-parent="#accordion">
              <div class="card-body"></div>
            </div>
          {% endif %}
        </div>
        {% if shipping_required %}
          <div class="card">
            <h4 class="card-header collapsed" data-target="#collapse-shipping-address">{{ text_checkout_shipping_address }}</h4>
            <div id="collapse-shipping-address" class="collapse" data-parent="#accordion">
              <div class="card-body"></div>
            </div>
          </div>
          <div class="card">
            <h4 class="card-header collapsed" data-target="#collapse-shipping-address">{{ text_checkout_shipping_method }}</h4>
            <div id="collapse-shipping-method" class="collapse" data-parent="#accordion">
              <div class="card-body"></div>
            </div>
          </div>
        {% endif %}
        <div class="card">
          <h4 class="card-header collapsed" data-target="#collapse-payment-method">{{ text_checkout_payment_method }}</h4>
          <div id="collapse-payment-method" class="collapse" data-parent="#accordion">
            <div class="card-body"></div>
          </div>
        </div>
        <div class="card">
          <h4 class="card-header collapsed" data-target="#collapse-checkout-confirm">{{ text_checkout_confirm }}</h4>
          <div id="collapse-checkout-confirm" class="collapse" data-parent="#accordion">
            <div class="card-body"></div>
          </div>
        </div>
      </div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
