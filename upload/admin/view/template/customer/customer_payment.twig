<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>{{ column_payment_method }}</th>
        <th>{{ column_image }}</th>
        <th>{{ column_type }}</th>
        <th>{{ column_status }}</th>
        <th>{{ column_date_expire }}</th>
        <th class="text-end">{{ column_action }}</th>
      </tr>
    </thead>
    <tbody>
      {% if payment_methods %}
        {% for payment_method in payment_methods %}
          <tr>
            <td>{{ payment_method.name }}</td>
            <td>{% if payment_method.image %}<img src="{{ payment_method.image }}" alt=""/>{% endif %}</td>
            <td>{{ payment_method.type }}</td>
            <td>{{ payment_method.date_expire }}</td>
            <td class="text-end"><button type="button" value="{{ payment_method.delete }}" data-bs-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa-solid fa-minus-circle"></i></button></td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="6">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-sm-6 text-start">{{ pagination }}</div>
  <div class="col-sm-6 text-end">{{ results }}</div>
</div>
