        url: 'index.php?route=sale/order|call&user_token={{ user_token }}&action=sale/cart',
        dataType: 'json',
        beforeSend: function () {
            $('#button-confirm').button('loading');
        },
        complete: function () {
            $('#button-confirm').button('reset');
        },
        success: function (json) {
            var shipping = false;

            html = '';

            if (json['products'].length) {
                for (i = 0; i < json['products'].length; i++) {
                    product = json['products'][i];

                    console.log(product);

                    html += '<tr>';
                    html += '  <td class="text-start">' + product['name'] + (!product['stock'] ? ' <span class="text-danger">***</span>' : '') + '<br/>';

                    if (product['option']) {
                        for (j = 0; j < product['option'].length; j++) {
                            option = product['option'][j];

                            html += '  - <small>' + option['name'] + ': ' + option['value'] + '</small><br />';
                        }
                    }

                    html += '  </td>';
                    html += '  <td class="text-start">' + product['model'] + '</td>';
                    html += '  <td class="text-end">' + product['quantity'] + '</td>';
                    html += '  <td class="text-end">' + product['price'] + '</td>';
                    html += '  <td class="text-end">' + product['total'] + '</td>';
                    html += '  <td class="text-end">';
                    html += '    <form action="{{ product_remove }}" method="post" data-oc-toggle="order-edit">';
                    html += '      <button type="submit" data-bs-toggle="tooltip" title="{{ button_remove }}" data-oc-loading-text="{{ text_loading }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button>';
                    html += '      <input type="hidden" name="key" value="' + product['cart_id'] + '"/>';
                    html += '    </form>';
                    html += '  </td>';
                    html += '</tr>';
                }
            }

            if (json['vouchers'].length) {
                for (i in json['vouchers']) {
                    voucher = json['vouchers'][i];

                    html += '<tr>';
                    html += '  <td class="text-start">' + voucher['description'] + '</td>';
                    html += '  <td class="text-start"></td>';
                    html += '  <td class="text-end">1</td>';
                    html += '  <td class="text-end">' + voucher['price'] + '</td>';
                    html += '  <td class="text-end">' + voucher['price'] + '</td>';
                    html += '  <td class="text-end-start" style="width: 3px;">';
                    html += '    <form action="{{ voucher_remove }}" method="post">';
                    html += '      <button type="submit" data-bs-toggle="tooltip" title="{{ button_remove }}" data-oc-loading-text="{{ text_loading }}" class="btn btn-danger"><i class="fas fa-minus-circle"></i></button>';
                    html += '      <input type="hidden" name="key" value="' + voucher['cart_id'] + '"/>';
                    html += '    </form>';
                    html += '  </td>';
                    html += '</tr>';
                }
            }

            if (!json['products'].length && !json['vouchers'].length) {
                html += '<tr>';
                html += '  <td colspan="6" class="text-center">{{ text_no_results }}</td>';
                html += '</tr>';
            }

            $('#order-items').html(html);

            // Totals
            html = '';

            if (json['totals'].length) {
                for (i in json['totals']) {
                    total = json['totals'][i];

                    html += '<tr>';
                    html += '  <td class="text-end"><strong>' + total['title'] + '</strong></td>';
                    html += '  <td class="text-end" style="width: 1px;">' + total['text'] + '</td>';
                    html += '</tr>';
                }
            }

            $('#order-totals').html(html);

            console.log(json['shipping_required']);

            if (json['shipping_required']) {
                $('#shipping-address').removeClass('d-none');
                $('#shipping-method').removeClass('d-none');
            } else {
                $('#shipping-address').addClass('d-none');
                $('#shipping-method').addClass('d-none');
            }
        },
        error: function (xhr, ajaxOptions, thrownError) {
            console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
    });
});

